<!DOCTYPE html>
<html>
  <head>
    <title>MyDnD</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
      <% flash.each do |key, value| %>
		<div class="alert alert-<%= key %>"><%= value %></div>
	  <% end %>
    <%= yield %>
  </body>
</html>
